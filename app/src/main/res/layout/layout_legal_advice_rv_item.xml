<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_30"
    android:background="@drawable/shape_sliding_tab_bg"
    android:paddingBottom="@dimen/size_40"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_40"
        android:layout_marginTop="@dimen/size_20"
        android:ems="10"
        android:text="习特会晤"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!--android:layout_width="@dimen/size_260"
    android:layout_height="@dimen/size_260"-->
    <ImageView
        android:id="@+id/iv_advice_head"
        android:layout_width="@dimen/size_260"
        android:layout_height="@dimen/size_260"
        android:layout_marginEnd="@dimen/size_40"
        android:layout_marginTop="@dimen/size_20"
        android:scaleType="fitXY"
        android:src="@mipmap/changzhang"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/iv_advice_head"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_advice_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_female_grey"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:text="Joker Zhang"
            android:textColor="@color/colorAddress"
            android:textSize="@dimen/font_14"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_40"
        android:layout_marginTop="@dimen/size_36"
        android:text="2018-12-02 20:55"
        android:textColor="@color/colorAddress"
        android:textSize="@dimen/font_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_advice_head"/>

</android.support.constraint.ConstraintLayout>