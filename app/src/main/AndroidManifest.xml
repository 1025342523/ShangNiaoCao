<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yscoco.uppernest">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_login_head"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ThemeTitleTheme">
        <activity android:name=".ui.activity.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.MainActivity"/>

        <activity android:name=".ui.activity.login.RegisterActivity"/>

        <activity android:name=".ui.activity.login.ForgetPasswordActivity"/>

        <activity android:name=".ui.activity.ChooseIdentityActivity"/>

        <activity android:name=".ui.activity.advisory.ConsultActivity"/>

        <activity android:name=".ui.activity.message.NotificationMessageActivity"/>

        <!--全面屏适配-->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <meta-data
            android:name="design_width_in_dp"
            android:value="360"/>

        <meta-data
            android:name="design_height_in_dp"
            android:value="640"/>

    </application>

</manifest>